{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          ".next/**",
          "public/**",
          "prisma/**",
          "db/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/socketio/(.*)",
      "dest": "/vercel-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel-server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}